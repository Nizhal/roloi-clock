function திசை (magnitude, angle) {
    var m, a;
    this.அபெறு = function () {
        return m * Math.cos(a);
    };

    this.setX = function (x) {
        var y = m * Math.sin(a);
        m = Math.sqrt((x * x) + (y * y));
        a = Math.atan2(y, x);
    };

    this.கபெறு = function () {
        return m * Math.sin(a);
    };

    this.setY = function (y) {
        var x = m * Math.cos(a);
        m = Math.sqrt((x * x) + (y * y));
        a = Math.atan2(y, x);
    };

    this.getMag = function () {
        return m;
    };

    this.setMag = function (magnitude) {
        m = magnitude;
    };

    this.getAngle = function () {
        return a;
    };

    this.setAngle = function (angle) {
        a = angle;
    };

    this.add = function (v) {
        return திசை.add(this, v);
    };

    this.subtract = function (v) {
        return திசை.subtract(this, v);
    };

    this.setMag(magnitude);
    this.setAngle(angle);
}

திசை.rectangular = function (x, y) {
    var m = Math.sqrt(x * x + y * y),
        a = Math.atan2(y, x);
    return new திசை(m, a);
};

திசை.polar = function (m, a) {
    return new திசை(m, a);
};

திசை.add = function (v1, v2) {
    return திசை.rectangular(v1.அபெறு() + v2.அபெறு(), v1.கபெறு() + v2.கபெறு());
};

திசை.subtract = function (v1, v2) {
    return திசை.rectangular(v1.அபெறு() - v2.அபெறு(), v1.கபெறு() - v2.கபெறு());
};
