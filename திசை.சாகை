function திசை (அளவு, கோணம்) {
    var ஐ, ஃ;
    this.அபெறு = function () {
        return ஐ * Math.cos(ஃ);
    };

    this.அஅமை = function (அ) {
        var க = ஐ * Math.sin(ஃ);
        ஐ = Math.sqrt((அ * அ) + (க * க));
        ஃ = Math.atan2(க, அ);
    };

    this.கபெறு = function () {
        return ஐ * Math.sin(ஃ);
    };

    this.கஅமை = function (க) {
        var அ = ஐ * Math.cos(ஃ);
        ஐ = Math.sqrt((அ * அ) + (க * க));
        ஃ = Math.atan2(க, அ);
    };

    this.getMag = function () {
        return ஐ;
    };

    this.ஐஅமை = function (அளவு) {
        ஐ = அளவு;
    };

    this.getAngle = function () {
        return ஃ;
    };

    this.ஃஅமை = function (கோணம்) {
        ஃ = கோணம்;
    };

    this.add = function (v) {
        return திசை.add(this, v);
    };

    this.subtract = function (v) {
        return திசை.subtract(this, v);
    };

    this.ஐஅமை(அளவு);
    this.ஃஅமை(கோணம்);
}

திசை.rectangular = function (x, y) {
    var ஐ = Math.sqrt(x * x + y * y),
        ஃ = Math.atan2(y, x);
    return new திசை(ஐ, ஃ);
};

திசை.polar = function (ஐ, ஃ) {
    return new திசை(ஐ, ஃ);
};

திசை.add = function (v1, v2) {
    return திசை.rectangular(v1.அபெறு() + v2.அபெறு(), v1.கபெறு() + v2.கபெறு());
};

திசை.subtract = function (v1, v2) {
    return திசை.rectangular(v1.அபெறு() - v2.அபெறு(), v1.கபெறு() - v2.கபெறு());
};
